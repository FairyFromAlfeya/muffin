{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "node",
      "jest"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "cli/actions",
    "cli/bin",
    "cli/commands",
    "cli/lib"
  ],
  "exclude": ["node_modules", "e2e",
    "cli/lib/schematic"
  ]
}
